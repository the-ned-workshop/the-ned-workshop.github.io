---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Enable the community to repair and create through educational skill building workshops and access to tools.' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://nedworkshop.org/images/meta-image.png" />
    <meta property="og:url" content="https://nedworkshop.org/" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | The Ned Workshop</title>
  </head>
  <body class="min-h-screen flex flex-col relative">
    <!-- Background Goop Blobs -->
    <div class="fixed inset-0 -z-10 overflow-hidden">
      <div class="blob blob-1 w-72 h-72 top-10 -left-20"></div>
      <div class="blob blob-2 w-96 h-96 top-40 right-10"></div>
      <div class="blob blob-3 w-64 h-64 bottom-20 left-1/4"></div>
      <div class="blob blob-4 w-80 h-80 bottom-40 right-1/3"></div>
      <div class="blob blob-5 w-56 h-56 top-1/2 left-10"></div>
    </div>

    <header class="bg-white/70 backdrop-blur-md border-b-2 border-amber-200 sticky top-0 z-50">
      <nav class="max-w-5xl mx-auto px-6 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="group">
            <span class="text-2xl font-extrabold text-amber-600 group-hover:text-amber-700 transition-colors duration-300">
              The Ned Workshop
            </span>
          </a>
          <div class="flex items-center gap-6">
            <a href="/" class="text-stone-600 hover:text-amber-600 transition-colors font-bold">
              Home
            </a>
            <a href="/about" class="text-stone-600 hover:text-amber-600 transition-colors font-bold">
              About
            </a>
          </div>
        </div>
      </nav>
    </header>

    <main class="flex-1 relative z-10">
      <slot />
    </main>

    <footer class="bg-white/70 backdrop-blur-md border-t-2 border-amber-200 mt-auto relative z-10">
      <div class="max-w-5xl mx-auto px-6 py-8">
        <div class="flex flex-col md:flex-row items-center justify-between gap-4">
          <p class="text-stone-500 text-sm font-semibold">
            &copy; {new Date().getFullYear()} The Ned Workshop
          </p>
          <p class="text-lg font-bold text-amber-600">
            Repair. Create. Learn.
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
